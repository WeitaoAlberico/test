<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE Form PUBLIC "sailpoint.dtd" "sailpoint.dtd">
<Form name="Access_Request_Status_Report">
  
  <Section columns="2" label="Primary Access Request Filters" name="customProperties">
    <Field columnSpan="1"><Attributes><Map><entry key="xtype" value="htmltemplate"/></Map></Attributes>
      <Value>
          <!--The renderer is stupid and cant handle line breaks -->
          <String><![CDATA[<strong>Note: Primary filters are applied using a database query and are much more effecient than secondary filters.</strong><ul><li>Whenever possible use only primary filters.</li><li>When secondardy filters are used, be sure that primary filters are used that limit the total number of Access Requests to inspect.</li></ul>]]></String>
      </Value>
    </Field>
    <Field columnSpan="1"><Attributes><Map><entry key="xtype" value="htmltemplate"/></Map></Attributes></Field>

    <Field name="requesters" type="Identity" columnSpan="1" displayName="report_requesters" helpKey="rept_input_lcm_request_status_report_requester" multi="true" value="ref:requesters"/>
    <Field columnSpan="1"><Attributes><Map><entry key="xtype" value="htmltemplate"/></Map></Attributes></Field>
    
    <Field name="requestees" type="Identity" columnSpan="1" displayName="report_target_identities" helpKey="rept_input_lcm_request_status_report_target_identity" multi="true" value="ref:requestees"/>
    <Field columnSpan="1"><Attributes><Map><entry key="xtype" value="htmltemplate"/></Map></Attributes></Field>

    <Field name="requestDateRange" type="string" columnSpan="1" displayName="report_requested_date_range" helpKey="rept_input_lcm_request_status_report_create_dt_start_use" value="ref:requestDateRange">
      <Attributes>
        <Map>
          <entry key="xtype" value="daterange"/>
        </Map>
      </Attributes>
    </Field>
    <Field columnSpan="1"><Attributes><Map><entry key="xtype" value="htmltemplate"/></Map></Attributes></Field>

    <Field name="status" type="string" columnSpan="1" displayName="Status" helpKey="rept_identity_roles_help_status" value="ref:status">
      <AllowedValues>
        <List>
          <String>all</String>
          <String>All Statuses</String>
        </List>
        <List>
          <String>Approve</String>
          <String>Approve</String>
        </List>
        <List>
          <String>End</String>
          <String>End</String>
        </List>
        <List>
          <String>Initialize</String>
          <String>Initialize</String>
        </List>
        <List>
          <String>Provision</String>
          <String>Provision</String>
        </List>
      </AllowedValues>
    </Field>
    <Field columnSpan="1"><Attributes><Map><entry key="xtype" value="htmltemplate"/></Map></Attributes></Field>

    <Field name="maxResults" type="integer" required="true" columnSpan="1" displayName="Maximum Access Requests to Return" helpKey="Specify the maximum number of access requests to include in the report." value="script:maxResults==void?500:maxResults">
    </Field>
    <Field columnSpan="1"><Attributes><Map><entry key="xtype" value="htmltemplate"/></Map></Attributes></Field>    

  </Section>

  <Section columns="2" label="Secondary Access Request Filters" name="customProperties">
    <Field><Attributes><Map><entry key="xtype" value="htmltemplate"/></Map></Attributes>
      <Value>
          <!--The renderer is stupid and cant handle line breaks -->
          <String><![CDATA[<strong>Note: Secondary filters cannot be applied using a database query. Instead code must be used to look at each Access Request.</strong><ul><li>This can have a performance impact on the database and on the server executing the report job.</li><li>To minimize this, please select primary filters that will reduce the number of secondardy filters that have to be evaluated.</li><li>Only the filtered results from the primary filtering will have secondary filters applied.</li></ul>]]></String>
      </Value>
    </Field>
    <Field columnSpan="1"><Attributes><Map><entry key="xtype" value="htmltemplate"/></Map></Attributes></Field>

    <Field name="applications" type="Application" columnSpan="1" displayName="report_applications" helpKey="rept_input_lcm_request_status_report_apps" multi="true" value="ref:applications"/>
    <Field columnSpan="1"><Attributes><Map><entry key="xtype" value="htmltemplate"/></Map></Attributes></Field>
    
    <Field name="approvers" type="Identity" columnSpan="1" displayName="report_approvers" helpKey="rept_input_lcm_request_status_report_approver" multi="true" value="ref:approvers"/>
    <Field columnSpan="1"><Attributes><Map><entry key="xtype" value="htmltemplate"/></Map></Attributes></Field>

    <Field name="roles" type="Bundle" columnSpan="1" displayName="report_roles" helpKey="rept_input_lcm_request_status_report_roles" multi="true" value="ref:roles"/>
    <Field columnSpan="1"><Attributes><Map><entry key="xtype" value="htmltemplate"/></Map></Attributes></Field>




  </Section>


</Form>
